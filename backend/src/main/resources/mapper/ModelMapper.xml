<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="tech.hongjian.oa.mapper.ModelMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="tech.hongjian.oa.entity.Model">
        <result column="id" property="id" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="name" property="name" />
        <result column="key" property="key" />
        <result column="description" property="description" />
        <result column="created_by" property="createdBy" />
        <result column="updated_by" property="updatedBy" />
        <result column="model_comment" property="modelComment" />
        <result column="model_type" property="modelType" />
        <result column="model_editor_json" property="modelEditorJson" />
        <result column="thumbnail" property="thumbnail" />
        <result column="version" property="version" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        create_time,
        update_time,
        name, key, description, created_by, updated_by, model_comment, model_type, model_editor_json, thumbnail, version
    </sql>
    <select id="selectByParams" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from `model`
        <where>
            <if test="key != null">
                upper(`key`) like upper(#{key})
            </if>
            <if test="name != null">
                and upper(`name`)  like upper(#{name})
            </if>
            <if test="type != null">
                and model_type = #{type}
            </if>
        </where>
    </select>

</mapper>
